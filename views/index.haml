.current
	Currently Playing:
	%b#current_song= @song

.controls
	%a{ :href => "control/previous" } Previous
	%a{ :href => "control/next" } Next

.selection
	.all.album_list
		%p
			%b Available Albums
		%ul
			- @list.each do	|album|
				%li.album
					%span.name= album.name
					%a.add{ :href => "/add/#{album.id}" } Add
	.selected.album_list
		%p
			%b Next Albums
		%ul
			- @next.each do |album|
				%li.album
					%span.votes= album.votes
					%span.name= album.name
					%a.up{ :href => "up/#{album.id}" } Up
					%a.down{ :href => "down/#{album.id}" } Down