.current
	Currently Playing:
	%b#current_song= song(@current_song)

.selection
	.all.album_list
		%p
			%b Available Albums
		%ul
			- @list.each do	|album|
				%li.album
					= album.name
					%a.add{ :href => "/add/#{album.id}" } Add
	.selected.album_list
		%p
			%b Next Albums
		%ul
			- @next.each do |album|
				%li.album= "#{album.votes} #{album.name}"